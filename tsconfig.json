{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "functions-build",
    "rootDir": "functions",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "functions/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}